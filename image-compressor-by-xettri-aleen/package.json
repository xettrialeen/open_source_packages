{
    "name": "image-compressor-by-xettri-aleen",
    "version": "1.0.0",
    "type": "module",
    "description": "Smart image compression with automatic CSP fallbacks and modern browser support",
    "main": "dist/index.js",
    "module": "dist/index.esm.js",
    "browser": "dist/index.standalone.js",
    "types": "types/index.d.ts",
    "files": [
      "dist",
      "types",
      "src/workers"
    ],
    "scripts": {
      "build": "npm run build:clean && rollup -c",
      "build:clean": "rimraf dist",
      "build:dev": "rollup -c -w",
      "build:prod": "NODE_ENV=production rollup -c",
      "test": "jest",
      "prepublishOnly": "npm run build:prod",
      "dev": "npm run build:dev"
    },
    "keywords": ["image", "compression", "webp", "jpeg", "png", "canvas", "browser"],
    "author": "Xettri Aleen",
    "license": "MIT",
    "dependencies": {
      "browser-image-compression": "^2.0.2"
    },
    "devDependencies": {
      "@rollup/plugin-node-resolve": "^15.2.3",
      "@rollup/plugin-commonjs": "^25.0.7",
      "@rollup/plugin-terser": "^0.4.4",
      "rollup": "^4.9.0",
      "rimraf": "^5.0.5",
      "jest": "^29.7.0",
      "typescript": "^5.3.0"
    },
    "engines": {
      "node": ">=16.0.0"
    }
  }